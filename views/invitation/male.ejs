    #scroll-down-btn:active {
      transform: translateX(-50%) scale(0.95);
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.3);
    }

    @media (max-width: 768px) {
      #scroll-down-btn {
        display: flex;
      }
    }

