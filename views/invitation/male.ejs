      z-index: 11000;
      -webkit-tap-highlight-color: transparent;
      outline: none;
      border: none;
    }

    #scroll-down-btn svg {
      width: 24px;
      height: 24px;
      fill: #333;
    }

    /* Bounce animation */
    @keyframes bounce-down {

      0%,
      100% {
        transform: translateY(0);
      }

      50% {
        transform: translateY(8px);
      }
    }

    /* Apply animations to button */
    #scroll-down-btn {
      animation: bounce-down 2s infinite, pulse-ring 2s infinite;
    }

